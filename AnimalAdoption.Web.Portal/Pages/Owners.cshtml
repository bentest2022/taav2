@page
@model AnimalAdoption.Web.Portal.Pages.OwnersModel
@{
    ViewData["Title"] = "Owners";
}

<div>
    <h1>Owner Information</h1>
    <table class='table table-striped'>
        <thead>
            <tr>
                <th>Name</th>
                <th>Phone Number</th>
                <th>Address</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var owner in Model.Owners)
            {
                <tr key=@owner.Id>
                    <td>@owner.Name</td>
                    <td>@owner.PhoneNumber</td>
                    <td>@owner.Address</td>
                </tr>
            }
        </tbody>
    </table>
</div>